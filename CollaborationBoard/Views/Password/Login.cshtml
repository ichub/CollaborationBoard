@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @ViewBag.BoardId
    </div>
    <form role="form" action="/Password/Board/@ViewBag.BoardId/Validate" method="post">
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="Password" placeholder="Password">
        </div>
        <div class="form-group" id="hiddenIdInput">
            <label for="boardId">Password</label>
            <input type="text" class="form-control" id="boardId" name="" value="@ViewBag.BoardId">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</body>
</html>
